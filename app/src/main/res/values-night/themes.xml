<resources>
    <!-- Base application theme. -->
    <style name="Theme.Koin_Apps" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Blue_100</item>
        <item name="colorPrimaryVariant">@color/Green_100</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Light_Violet_100</item>
        <item name="colorSecondaryVariant">@color/Light_Pink_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
    </style>
</resources>